<div class="mr-2 ml-2"  style="width: 100%;">

<div class=" card shadow-lg" style="">
    <div class="card-content ml-2 mr-4 mb-3 mt-2">
        <form >
            <div class="form-row">
                <div class="col-lg-12 mb-2">
                    <dt class="textColor">Thông tin nhân viên</dt>
                </div>
                <div class="col-md-6 lg-3  mb-3 " style="display: flex">
                    <div class="col-md-6 lg-3  mb-3">
                        <label class="textColor">Họ</label>
                        <input type="text" class="form-control"  placeholder="Họ "  required>
                    </div>
                    <div class=" col-md-6 lg-3 ml-3">
                        <label class="textColor">Tên</label>
                        <input type="text"  class="form-control"  placeholder="tên nhân viên"   required>
                    </div>
                </div>
    
                <div class="col-md-6 mb-3">
                    <label class="textColor">Ngày sinh</label>
                    <input type="Date" class="form-control" placeholder="Ngày sinh" required>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="textColor">Giới tính</label>
                    <select class="form-control">
                        <option >---Chọn---</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="textColor">Số điện thoại</label>
                    <input type="text" class="form-control"placeholder="Số điện thoại" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="textColor">Email</label>
                    <input type="text" class="form-control" placeholder="Email" name="email"  required>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="textColor">Nơi sinh</label>
                    <input type="text" class="form-control" placeholder="Nơi sinh" name="noisinh"  required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="textColor">Địa chỉ</label>
                    <input type="text" class="form-control" placeholder="Địa chỉ"  name="diachi" required>
                </div>
            </div>
