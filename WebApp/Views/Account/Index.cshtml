@model IEnumerable<WebApp.Areas.Identity.Data.ApplicationUser>
@{
    int Stt = 0;
}
<div class="row">
    <div class="col-lg-12">
        <div class=" row page-titles shadow-lg mx-0">
            <div class="col-sm-6 p-md-0">
                <h3>Nhân viên</h3>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a asp-controller="Museum" asp-action="Index">Danh sách</a></li>
                   @*  <li class="breadcrumb-item active"><a>loại văn bản</a></li>*@
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow-lg">
                    <div class="m-2">
                        <table class="table table-striped table-bordered w-auto">
                            <thead class="text-center text-nowrap" style="background-color:#dbd8d8">
                                <tr>
                                    <td class="w-5">
                                        STT
                                    </td>
                                    <td class="w-10">
                                        Hình ảnh
                                    </td>
                                    <td class="w-20">
                                        Nhân viên
                                    </td>
                                    <td class="w-15">
                                       Ngày sinh
                                    </td>
                                    <td class="w-15">
                                       Giới tính
                                    </td>
                                    <td class="w-25">
                                        Email
                                    </td>
                                    <td class="w-20">
                                        SDT
                                    </td>
                                    <td class="w-5">

                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                     Stt++;
                                    <tr>
                                        <td class="text-center">
                                            @Stt
                                        </td>
                                        <td class="text-center">
                                            <img height="100" width="100" src="~/Images/@item.Image">
                                        </td>
                                        <td class="text-left">
                                            @item.FisrtName @item.LastName
                                        </td>
                                        <td class="text-center">
                                            @item.BirthDate.ToString("dd/MM/yyyy")
                                        </td>
                                         <td class="text-center">
                                            @item.Sex
                                        </td>
                                        <td class="text-left">
                                            @item.Email
                                        </td>
                                        <td class="text-center">
                                            @item.PhoneNumber
                                        </td>
                                        <td class="text-center">
                                           <div class="dropdown dropdown-action">
                                                <a href="#"  style="color: black;font-size: 30px;" data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></a>
                                                <div class="dropdown-menu dropdown-menu-center">
                                                    <form asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id">
                                                        <button class="btn btn-success w-70 ml-4"><i class="fa fa-pencil m-r-5"></i> Sửa</button>
                                                    </form>                          
                                                    <form asp-action="Delete" asp-route-id="@item.Id">
                                                        <button class="btn btn-danger w-70 mt-2 ml-4"><i class="fa fa-trash-o m-r-5"></i> Xóa</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>