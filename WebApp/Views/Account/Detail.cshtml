@model WebApp.Models.ViewModel.VMAccount;

<div class="mr-1 ml-1">
    <!-- Tiêu đề -->
    <div class=" row page-titles shadow-lg mx-0">
        <div class="col-sm-1">
            <a href="#" onclick="history.back()"> <i class="mdi mdi-arrow-left-bold-circle-outline" style="font-size: 3em;color:#230c4e;"></i></a>
        </div>
        <div class="col-sm-7 p-md-0">
            <div class="flex d-flex mt-3    ">
                <h3 style="color:#673BB7;">Thông tin chi tiết : @Model.Account.FisrtName @Model.Account.LastName</h3>
            </div>
        </div>
        <div class="col-sm-4 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active" ><a href="">Chi tiết</a></li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg">
                <div class="card-content">
                    <div class="row mt-1 mb-1">
                        <div class="col-lg-5">
                            <div class="row">
                                <div class="col-lg-4 ml-3 mt-3">
                                    <img src="~/Images/@Model.Account.Image" width="220" height="220" class="rounded-circle" alt="">
                                </div>
                                <div class="col-lg-6 ml-2 mt-5" style="border-right: 2px dashed #ccc;">
                                    <h4 class="mt-4 ml-5">Họ Tên: @Model.Account.FisrtName @Model.Account.LastName</h4>
                                  @*  <h4 class="ml-5">@UserInfo.BirthDate.ToString("dd/MM/yyyy")</h4>*@
                                    @if (Model.Role == "Manager")
                                    {
                                        <span class=" ml-5 badge badge-pill badge-success text-white" style="font-size:20px;">Quản trị viên</span>
                                        
                                    }
                                    @if (Model.Role == "Employee")
                                    {
                                       <span class=" mt-3 ml-5 badge badge-pill badge-info text-white" style="font-size:20px;">Nhân viên</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 w-auto ml-5">
                            <ul class="mt-2">
                            @*     <li >
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Họ</h4>
                                        </div>
                                        <div class="col-lg-7">
                                           <h5>@UserInfo.FisrtName</h5>
                                        </div>
                                    </div>
                                </li>
                                 <li class="mt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Tên</h4>
                                        </div>
                                        <div class="col-lg-7">
                                           <h5>@UserInfo.LastName</h5>
                                        </div>
                                    </div>
                                </li>*@
                                <li class="mt-0"> 
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Ngày sinh</h4>
                                        </div>
                                        <div class="col-lg-7">
                                            <h5>@Model.Account.BirthDate</h5>
                                        </div>
                                    </div>
                                </li>
                                <li class="mt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Giới tính</h4>
                                        </div>
                                        <div class="col-lg-7">
                                           <h5>@Model.Account.Sex</h5>
                                        </div>
                                    </div>
                                </li>
                                <li class="mt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Số điện thoại</h4>
                                        </div>
                                        <div class="col-lg-7">
                                           <h5>@Model.Account.PhoneNumber</h5>
                                        </div>
                                    </div>
                                </li>
                                <li class="mt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Email</h4>
                                        </div>
                                        <div class="col-lg-7">
                                           <h5>@Model.Account.Email</h5>
                                        </div>
                                    </div>
                                </li>
                                <li class="mt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Địa chỉ</h4>
                                        </div>
                                        <div class="col-lg-7">
                                           <h5>@Model.Account.Address</h5>
                                        </div>
                                    </div>
                                </li>
                                <li class="mt-2">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <h4>Nơi sinh</h4>
                                        </div>
                                        <div class="col-lg-7">
                                           <h5>@Model.Account.PlaceOfBirth</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-0">
                            <a style="color: black" asp-controller="Account" asp-action="Edit" asp-route-id="@Model.Account.Id"><i class="mdi mdi-border-color" style="font-size:30px"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-7">
            <div class="card shadow-lg">
                <div class="card-header">
                   <h3> Thông tin liên lạc</h3>
                </div>
                <div class="card-content">
                    <ul class="mt-2 ml-5">
                        <li class="mt-2">
                            <div class="row">
                                <div class="col-lg-4">
                                    <h4>Số điện thoại</h4>
                                </div>
                                <div class="col-lg-7">
                                    <h5>@Model.Account.PhoneNumber</h5>
                                </div>
                            </div>
                        </li>
                        <li class="mt-2">
                            <div class="row">
                                <div class="col-lg-4">
                                    <h4>Email</h4>
                                </div>
                                <div class="col-lg-7">
                                    <h5>@Model.Account.Email</h5>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3>Địa chỉ</h3>
                </div>
                <div class="card-content">
                    <div class="col-lg-11">
                        <ul class="mt-2 ml-5">
                            <li>
                                <div class="row">
                                    <div class="col-lg-5">
                                       <h4>Địa chỉ hiện tại</h4>
                                    </div>
                                    <div class="col-lg-7">
                                       <h5>@Model.Account.Address</h5>
                                    </div>
                                </div>
                            </li>
                             <li>
                                <div class="row mb-2">
                                    <div class="col-lg-5">
                                      <h4>Nơi sinh</h4>
                                    </div>
                                    <div class="col-lg-7">
                                       <h5>@Model.Account.PlaceOfBirth</h5>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-1"></div>
                </div>
            </div>
        </div>
    </div>
</div>