@model WebApp.Areas.Identity.Data.ApplicationUser
<div class=" row page-titles shadow-lg mx-0">
    <div class="col-sm-6 p-md-0">
        <div style="display:flex;">
            <h3> Sửa nhân viên</h3>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Account" asp-action="Index">nhân viên</a></li>
            <li class="breadcrumb-item active"><a href="">Sửa</a></li>
        </ol>
    </div>
</div>
    @if(ViewData["Error"] != null)
    {
      <div class="alert mb-3 alert-danger solid alert-dismissible fade show">
        <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close"><span><i class="mdi mdi-close"></i></span>
        </button>
        <strong>@ViewData["Error"]</strong>
      </div>   
    }
<div class=" card shadow-lg" style="">
    <div class="card-content ml-2 mr-4 mb-3 mt-2">
        <form asp-controller="Account" asp-action="Update">
            <input asp-for="Id" hidden="hidden"/>
            <div class="form-row">
                <div class="col-lg-12 mb-2">
                    <dt class="textColor">Thông tin nhân viên</dt>
                </div>
                <div class="col-md-6 lg-3  mb-3 " style="display: flex">
                    <div class="col-md-6 lg-3  mb-3">
                        <label class="textColor">Họ</label>
                        <input type="text" asp-for="FisrtName" class="form-control"  placeholder="Họ "  required>
                    </div>
                    <div class=" col-md-6 lg-3 ml-3">
                        <label class="textColor">Tên</label>
                        <input type="text" asp-for="LastName"  class="form-control"  placeholder="tên nhân viên"   required>
                    </div>
                </div>
    
                <div class="col-md-6 mb-3">
                    <label class="textColor">Ngày sinh</label>
                    <input asp-for="BirthDate" asp-format="{0:yyyy-MM-dd}" class="form-control" required /> 
                    
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="textColor">Giới tính</label>
                    <select class="form-control" asp-for="Sex">
                        <option asp-for ="@Model.Sex" selected>@Model.Sex</option>
                        <option >---Chọn---</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="textColor">Số điện thoại</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control"placeholder="Số điện thoại" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="textColor">Email</label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email" required>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="textColor">Nơi sinh</label>
                    <input type="text" asp-for="PlaceOfBirth" class="form-control" placeholder="Nơi sinh"  required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="textColor">Địa chỉ</label>
                    <input type="text" asp-for="Address" class="form-control" placeholder="Địa chỉ" required>
                </div>
            </div>
            <div class="col-lg-12 mb-2">
                <dt class="textColor">Khác</dt>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3 " >
                    <label class="textColor">Tên Tài Khoản</label>
                    <input type="text" asp-for="UserName" class="form-control"  placeholder="Tên tài khoản"  required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="textColor">Mật khẩu</label>
                    <input type="text" class="form-control" asp-for="PasswordHash"  placeholder="Mật khẩu"  required>
                </div>
            </div>
             <div class="row mb-4 mt-4">
                <div class="col-lg-12 text-center">
                     <input type="submit" name="btn" class="btn btn-primary" type="submit" value="Sửa thông tin">
                </div>
            </div>
        </form>
    </div>
</div>
