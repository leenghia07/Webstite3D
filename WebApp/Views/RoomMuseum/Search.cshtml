@model WebApp.Models.ViewModel.VMMuseum;
@{
    Layout = "_LayoutUser";
    var Museums = @Model.Museums;
}
<div class="col-lg-12" >
    <h1 class="text-center mt-3"  style="border-bottom: 0.1rem solid;">Bảo tàng</h1>
    <div class="row">
        <div class="col-lg-5">
            <div class="collapse shadow-lg" id="collapseExample">
                 <div class="card shadow-lg mt-5" style="margin-top:-4rem;">
                    <div class="card-header"><h4>Tìm kiếm</h4></div>
                    <div class="card-body" style="margin-top:-1%;">
                        <form asp-controller="RoomMuseum" asp-action="Search">
                            <div class="card-body d-flex flex-row ">
                                <div class="col-lg-6">
                                    <select class="form-control" asp-for="@Model.MuseumId"  required>
                                        @foreach (var item in @Model.MuseumsSelections)
                                            {
                                                @if (item.Id == @Model.MuseumId)
                                                {
                                                    <option  value="@item.Id">@item.MuseumName</option> 
                                                }
                                            }
                                        <option>---- Bảo tàng ----</option>
                                            @foreach (var item in @Model.MuseumsSelections)
                                            {
                                                <option  value="@item.Id">@item.MuseumName</option> 
                                            } 
                                    </select>
                                </div>
                                <div class="col-lg-6">
                                    <button type="submit" style="width:12rem;height:3rem;font-size: 1.2rem;color:white;" class="btn btn-secondary">Tìm kiếm</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-lg mt-5">
        <div class="card-header">
            <div class="col-lg-10">
                <h4>Danh sách</h4>
            </div>
            <div class="col-lg-2">
                <button class="btn btn-secondary" style="width:12rem;height:3rem;font-size: 1.2rem;color:white;"  data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Tìm kiếm</button>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex flex-wrap">
                @foreach (var item in Museums)
                   {
                    <div class=" ml-5 card shadow-lg ">
                       <div class="card-body">
                            <a asp-controller="RoomMuseum" asp-action="Detail" asp-route-id="@item.Id">
                                <div class="row ml-2 mr-2" >
                                    <div class="col-lg-10">
                                        <img src="~/Images/@item.Image" height="150" width="300">
                                    </div>
                                </div>
                                <div class="row mt-3 mb-1">
                                    <div class=" col text-center">
                                        <h4  style="color:#673BB7;">
                                            @item.MuseumName
                                        </h4>
                                    </div>
                                </div>
                            </a>
                       </div>
                    </div>
                   }
            </div>
        </div>
    </div>
</div>